{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/server.ts",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist",
                "framework": "vite"
            }
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/backend/src/server.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/frontend/$1"
        }
    ],
    "env": {
        "ENABLE_BACKGROUND_POLLER": "false"
    }
}